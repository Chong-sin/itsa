#include <iostream>
#include <iomanip>

int main() {
    while (true) {
        float h;
        int se;

        if (!(std::cin >> h >> se)) {
            break; // Exit loop when input ends
        }

        if (se == 1) {
            std::cout << std::fixed << std::setprecision(1) << (h - 80) * 0.7 << std::endl;
        } else {
            std::cout << std::fixed << std::setprecision(1) << (h - 70) * 0.6 << std::endl;
        }
    }

    return 0;
}

